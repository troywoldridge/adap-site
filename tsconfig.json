{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2020"
    ],

    "typeRoots": ["src/types", "node_modules/@types"],

    "jsx": "preserve",
    "module": "ESNext",                  // For Next.js
    "moduleResolution": "node",
   
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@lib/*": [
        "src/lib/*"
      ],
      "@drizzle/*": [
        "src/drizzle/*"
      ],
      "@types/*": [
        "src/types/*"
      ],
      "@schema/*": [
        "src/drizzle/migrations/*"
      ]
    },
    "allowJs": true,                     // Allow JS in scripts/
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "incremental": true,
    "types": [
      "node"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",                // <--- Ensures src/ is fully covered
    "src/**/*.tsx",
    "scripts/**/*.ts",            // <--- Ensures TypeScript scripts work!
    "scripts/**/*.js",            // <--- JS scripts too
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/global.d.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
